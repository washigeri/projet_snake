#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <math.h>
#include "struct.h"
#include "jeu.h"


bool middle(snake s,int taille){
	bool res=false;
	if(s.pos[0].x==taille/2 && s.pos[0].y==taille/2){
		res=true;
	}
	return res;
}

void move_to_middle(snake s,int taille){
	int halflength=taille/2;
	if(s.pos[0].x!=halflength && s.pos[0].y!=halflength){
		if(s.pos[0].x>halflength){
			movesnake(s,left);
		}
		else {
			movesnake(s,right);
		}
	}
	/*else if(s.pos[0].x!=halflength){
		if(s.pos[0].x>halflength){
			movesnake(s,left);
		}
		else {
			movesnake(s,right);
		}
	}
	else if(s.pos[0].y!=halflength){
		if(s.pos[0].y>halflength){
			movesnake(s,up);
		}
		else {
			movesnake(s,down);
		}
	}*/
}
